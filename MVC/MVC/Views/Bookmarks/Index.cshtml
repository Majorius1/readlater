@model IEnumerable<ReadLater.Entities.Bookmark>

@{
	ViewBag.Title = "Bookmarks";
}

<h2>Bookmarks</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.URL)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model) {
		<tr>
			<td>
				@using (Html.BeginForm(new { action = "IncrementBookmarkUsage", controller = "Bookmarks", id = item.ID })) {
					<span class="bookmark-link">@Html.DisplayFor(modelItem => item.URL)</span>
				}
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
				@Html.ActionLink("Details", "Details", new { id = item.ID }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.ID })
			</td>
		</tr>
				}

</table>

@section scripts {
	<script src="~/Scripts/bookmarks.js"></script>
}
